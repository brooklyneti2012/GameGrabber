@page
@model GameGrabber.Pages.SalesPage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Sales</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Sales.SalesID" />
            <div class="form-group">
                <label asp-for="Sales.ProductID" class="control-label"></label>
                <select asp-for="Sales.ProductID" class="form-control" asp-items="ViewBag.ProductID"></select>
                <span asp-validation-for="Sales.ProductID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sales.CustomerID" class="control-label"></label>
                <select asp-for="Sales.CustomerID" class="form-control" asp-items="ViewBag.CustomerID"></select>
                <span asp-validation-for="Sales.CustomerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
